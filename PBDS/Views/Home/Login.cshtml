@model PBDS.Models.Admin

@{
    ViewBag.Title = "Đăng Nhập";
    if (@ViewBag.Message != null)
    {
        ViewBag.Message = "Sai tài khoản hoặc mật khẩu";
    }
}

<script>
    if (@ViewBag.Message != null) {
        alert('@ViewBag.Message');
    }
</script>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Đăng Nhập
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.Label("Tên tài khoản")
                        @Html.TextBoxFor(m => m.TenTaiKhoan, "", new { @class = "form-control", @placeholder = "Tên tài khoản" })

                    </div>
                    <div class="form-group">
                        @Html.Label("Mật khẩu")
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    @Html.ValidationMessage("LogOnError")
                    <div class="form-group" style="margin: auto; width: 50%; border: 3px;color:white; padding: 10px; text-align:center">
                        <input type="submit" name="submit" class="btn-border-grey" value="Đăng nhập" style="font-size:15px;" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>



