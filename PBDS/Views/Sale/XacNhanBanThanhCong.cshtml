@model PBDS.Models.PhanCong

<style>
    .center {
        display: flex;
        justify-content: center;
    }

    .close {
        font-size: 35px;
        margin: 5px 10px;
    }
</style>

<div>
    <div class="modal-header">
        <h4>@Model.BatDongSan.TenBatDongSan</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <hr />

    <p><b>@Html.DisplayName("Tên bất đông sản")</b> : @Model.BatDongSan.TenBatDongSan</p>

    <p><b>@Html.DisplayName("Tên sale")</b> : @Model.Sale.TenSales</p>

    <p><b>@Html.DisplayName("Giá")</b> : @Model.BatDongSan.Gia @Model.BatDongSan.DonVi.TenDonVi</p>

    <p><b>@Html.DisplayName("Phần trăm hoa hồng")</b> : @Model.PhanTramHoaHong %</p>

    <p><b>Tiền hoa hồng</b> : @ViewBag.tienhoahong @Model.BatDongSan.DonVi.TenDonVi</p>

    <p><b>Địa chỉ </b> : @Model.BatDongSan.DiaChi</p>

    <p><b>@Html.DisplayName("Số điện thoại liên hệ")</b> : @Html.DisplayFor(model => model.BatDongSan.SoDienThoaiLienHe)</p>



</div>
@using (Html.BeginForm("XacNhanBanThanhCong", "Sale", FormMethod.Post))
{
    <input name="idbatdongsan" value="@Model.IDBatDongSan" type="hidden" /> 
    <div class="center">

        <input style="font-size:20px; margin:15px" type="submit" class="btn btn-success" value="Xác nhận" onclick="return confirm('Chọn Ok để hoàn tất');" />
        <button style="font-size:20px; margin:15px" type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
    </div>
}
