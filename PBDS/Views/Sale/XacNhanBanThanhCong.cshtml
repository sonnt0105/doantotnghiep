@model PBDS.Models.PhanCong

<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .buttonagree {
        background-color: white;
        color: black;
        border: 2px solid #4CAF50;
    }

        .buttonagree:hover {
            background-color: #4CAF50;
            color: white;
        }

    .buttoncancel {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
    }

        .buttoncancel:hover {
            background-color: #f44336;
            color: white;
        }

    .center {
        display: flex;
        justify-content: center;
    }

    .close {
        font-size: 35px;
        margin: 5px 10px;
    }
</style>

<div>
    <div class="modal-header">
        <h4>@Model.BatDongSan.TenBatDongSan</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <hr />

    <p><b>@Html.DisplayName("Tên bất đông sản")</b> : @Model.BatDongSan.TenBatDongSan</p>

    <p><b>@Html.DisplayName("Tên sale")</b> : @Model.Sale.TenSales</p>

    <p><b>@Html.DisplayName("Giá")</b> : @Model.BatDongSan.Gia @Model.BatDongSan.DonVi.TenDonVi</p>

    <p><b>@Html.DisplayName("Phần trăm hoa hồng")</b> : @Model.PhanTramHoaHong %</p>

    <p><b>Tiền hoa hồng</b> : @ViewBag.tienhoahong @Model.BatDongSan.DonVi.TenDonVi</p>

    <p><b>Địa chỉ </b> : @Model.BatDongSan.DiaChi</p>

    <p><b>@Html.DisplayName("Số điện thoại liên hệ")</b> : @Html.DisplayFor(model => model.BatDongSan.SoDienThoaiLienHe)</p>



</div>
@using (Html.BeginForm("XacNhanBanThanhCong", "Sale", FormMethod.Post))
{
    <input name="idbatdongsan" value="@Model.IDBatDongSan" type="hidden" /> 
    <div class="center">
        <input type="submit" class="button buttonagree" value="Xác Nhận"  onclick="return confirm('Chọn Ok để xác nhận bán thành công')"/>
        <button type="button" class="button buttoncancel" data-dismiss="modal">Hủy</button>
    </div>
}
