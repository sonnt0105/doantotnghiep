@model PBDS.Models.BatDongSan

<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .buttonagree {
        background-color: white;
        color: black;
        border: 2px solid #4CAF50;
    }

        .buttonagree:hover {
            background-color: #4CAF50;
            color: white;
        }

    .buttoncancel {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
    }

        .buttoncancel:hover {
            background-color: #f44336;
            color: white;
        }

    .center {
        display: flex;
        justify-content: center;
    }

    .close {
        font-size: 35px;
        margin: 5px 10px;
    }
</style>

<div>
    <div class="modal-header">
        <h4>@Model.TenBatDongSan</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <hr />
    <img src="~/@Html.DisplayFor(model => model.Urlimage)" alt="Không có hình ảnh" width="300" height="180" />

    <p><b>@Html.DisplayName("Tên bất động sản")</b> : @Model.TenBatDongSan</p>

    <p><b>@Html.DisplayName("Tên loại bài đăng")</b> : @Model.LoaiBaiDang.TenLoaiBaiDang</p>

    <p><b>@Html.DisplayName("Tên dự án")</b> : @Model.DuAn.TenDuAn</p>

    <p><b>@Html.DisplayName("Tên loại nhà đất")</b> : @Model.LoaiNhaDat.TenLoaiNhaDat</p>

    <p><b>@Html.DisplayName("Giá")</b> : @Model.Gia @Model.DonVi.TenDonVi </p>

    <p><b>@Html.DisplayName("Diện tích")</b> : @Model.DienTich m<sup>2</sup></p>

    <p><b>Địa chỉ</b> : @Model.DiaChi</p>

    <div style="white-space: pre-line">
        <p><b>@Html.DisplayName("Mô tả")</b> : @Model.Mota.Replace("<br />", Environment.NewLine)</p>
    </div>

    @if (Model.SoPhongNgu != null)
    {
        <p><b>@Html.DisplayName("Số phòng ngủ")</b> : @Model.SoPhongNgu Phòng</p>
    }
    @if (Model.SoTang != null)
    {
        <p><b>@Html.DisplayName("Số tầng")</b> : @Model.SoTang</p>
    }
    @if (Model.SoToilet != null)
    {
        <p><b>@Html.DisplayName("Số toilet")</b> : @Model.SoToilet</p>
    }
    @if (Model.NoiThat != null)
    {
        <p><b>@Html.DisplayName("Nội thất")</b> : @Model.NoiThat</p>
    }
    @if (Model.MatTien != null)
    {
        <p><b>@Html.DisplayName("Mặt tiền")</b> : @Model.MatTien</p>
    }
    @if (Model.HuongNha != null)
    {
        <p><b>@Html.DisplayName("Hướng nhà")</b> : @Model.HuongNha</p>
    }

    <p><b>@Html.DisplayName("Ngày Đăng")</b> : @Model.NgayDang.ToString(string.Format("dd/MM/yyyy"))</p>
    @if (Model.TenLienHe != null)
    {
        <p><b>@Html.DisplayName("Tên liên hệ")</b> : @Model.TenLienHe</p>
    }
    @if (Model.DiaChiLienHe != null)
    {
        <p><b>@Html.DisplayName("Địa chỉ liên hệ")</b> : @Model.DiaChiLienHe</p>
    }

    <p><b>@Html.DisplayName("Số điện thoại liên hệ")</b> : @Model.SoDienThoaiLienHe</p>

    @if (Model.EmailLienHe != null)
    {
        <p><b>@Html.DisplayName("Email liên hệ")</b> : @Model.EmailLienHe</p>
    }
    <div class="center"  style="margin:0px 0px 10px 0px; ">
        @using (Html.BeginForm("Duyet", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.ID)
            <div class="center">
                <input style="font-size:20px" type="submit" class="btn btn-success" value="Duyệt" onclick="return confirm('Chọn Ok để Duyệt');" />
            </div>
        }

        @using (Html.BeginForm("LoaiBo", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.ID)

            <input style="margin:0px 15px 0px 15px; font-size:20px"  type="submit" class="btn btn-danger" value="Loại Bỏ" onclick="return confirm('Chọn Ok Loại bỏ bài đăng');" />

        }
        <button style="font-size:20px" type="button" class="btn btn-info" data-dismiss="modal">Hủy</button>
    </div>
